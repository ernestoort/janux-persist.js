{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES6",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "lib-esm",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "declaration": true,
        "jsx": "react"
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "dist",
        "gulp",
        "docker",
        "config"
    ]
}
